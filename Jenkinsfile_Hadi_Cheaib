pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                bat """
                if not exist %VIRTUAL_ENV% (
                    python -m venv %VIRTUAL_ENV%
                )
                call %VIRTUAL_ENV%\\Scripts\\activate
                pip install --upgrade pip
                pip install -r requirements.txt
                pip install coverage bandit
                """
            }
        }

        stage('Lint') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                flake8 app.py tests
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                pytest -q
                """
            }
        }

        stage('Coverage') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                coverage run -m pytest
                coverage xml -o coverage.xml
                coverage html -d htmlcov
                """
            }
        }

               stage('Security Scan') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                bandit -r . -x venv -f json -o bandit-report.json
                """
            }
        }


        stage('Deploy') {
            steps {
                bat """
                call %VIRTUAL_ENV%\\Scripts\\activate
                python deploy.py
                """
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'coverage.xml, htmlcov/**, bandit-report.json, deploy/**', allowEmptyArchive: true
            cleanWs()
        }
    }
}
